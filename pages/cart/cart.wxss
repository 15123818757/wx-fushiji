/* pages/cart/cart.wxss */
checkbox-group{display: inline-block;}
.goodsGrop{width: 100%;position: relative;}
.cartBox checkbox{transform: translateY(-40px);}
.cartBox{text-align: center;}
.cartBox>text{
  display: inline-block;
  text-align: center;
  color: black;
  padding: 2% 4%;
  border-radius: 3px;
  border: 1px solid lightgray;
  background: white;
}
.checkbox{
  display: block;
  height: 125px;
  background: white;
  padding: 15px;
  box-sizing: border-box;
  overflow: hidden;
  border-bottom: 1px solid #d9d9d9;
  position: relative;
  margin-bottom: 3%;
}
.goodImg{
  display: inline-block;
  width: 70px;
  height: 93.1px;
  vertical-align: top;
  margin-left: 3%;
}
.goodsInfo{display: inline-block;width: 60%;padding-left: 5%;box-sizing: border-box;}
.goodsInfo text{color: #999999;font-size: 0.8rem;display: block;text-align: left;}
.goodsInfo text:nth-of-type(1){height: 55px;overflow: hidden;}
.goodsInfo text:nth-of-type(3){color: black;}
.changeNum{
  position: absolute;  
  right: 15px;
  bottom: 15px;
}
.changeNum label{
  display: inline-block;
  font-family: "微软雅黑";
  width: 30px;
  height: 30px;
  background: #f0f0f2;
  line-height: 30px;
  text-align: center;
}
.changeNum label:nth-of-type(2){background: white;}
.hideBox{height: 60px;}
.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 60px;
  width: 100%;
  background: white;
}
.bottom>checkbox-group{
  display: inline-block;
  color: #676767;font-size: 0.8rem;line-height: 60px;
  font-family: "微软雅黑";
}
.bottom>checkbox-group checkbox{
  padding-left: 15px;
}
.bottom>view{
  display: inline-block;
  width: 50%;
  text-align: right;
  float: right;
}
.bottom>view view{
  display: inline-block;
  color: #666666;
  line-height: 60px;
  font-size: 0.8rem;
  font-family: "微软雅黑";
}
.bottom>view view:nth-of-type(1) text{
  font-size: 0.8rem;
  line-height: 60px;
  color: #333333;
  padding-right: 20px;
}
.bottom>view view:nth-of-type(2){
  height: 60px;
  width: 70px;
  font-size: 0.8rem;
  color: white;
  line-height: 60px;
  text-align: center;
  background: #ff3b30;
}

@media only screen and (min-width: 100px) and (max-width: 340px) {
  .cartBox wx-checkbox{transform: translateY(-30px);}
  .bottom>checkbox-group checkbox{transform: translateY(-2px)}
  .cartBox{height: 105px;}
  .goodImg{width: 55px;height: 73px;}
  .goodsInfo text:nth-of-type(1){height: 40px;}
  .checkbox{height: 105px;}
}