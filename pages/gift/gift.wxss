/* pages/gift/gift.wxss */
.top{position: relative;}
.top>view{position: absolute;left: 0;top: 0;height: 65px;width: 100%;padding: 2% 0;box-sizing: border-box;}
.top>view text{
  display: block;
  color: #000740;
  font-size: 0.8rem;
  text-align: left;
  padding-left: 3%;
  line-height: 25px;
}
.top>image{display: block;width: 100%;height: 65px;}
.content{
  background: white;
  margin-top: 3%;
}
.content>text{
  display: block;
  line-height: 35px;
  text-align: left;
  padding-left: 3%;
  box-sizing: border-box;
  color: black;
  border-bottom: 1px solid #eaeaea;
}
.content>view{
  padding: 3%;
  box-sizing: border-box;
}
.box{text-align: center;}
.box>view{
  background: #ffffff;
}
.box>view:nth-of-type(2n){background: #f0f0f2;}
.box>view:nth-of-type(1){background: #686a82;color: white;}
.box>view text{
  width: 33.33%;
  display: inline-block;
  vertical-align: top;
  border-right: 1px solid white;
  box-sizing: border-box;
  line-height: 40px;
  overflow: hidden;
  height: 40px;
}
.box>text{
  display: inline-block;
  text-align: center;
  color: black;
  padding: 2% 4%;
  border-radius: 3px;
  border: 1px solid lightgray;
}
@media only screen and (min-width: 100px) and (max-width: 340px) {
	.top>image{height: 60px;}
  
}
@media only screen and (min-width:370px) and (max-width: 420px) {
  .top>image{height: 70px;}
 
}