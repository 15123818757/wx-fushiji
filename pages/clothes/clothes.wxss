/* pages/clothes/clothes.wxss */
.left,.right{position: fixed;}
.left{width: 28%;background: #ffffff;height: 100%;}
.right{width: 72%;right: 0;height: 100%;overflow-y: auto;background: #f0f0f2;padding: 3% 0 0 3%;box-sizing: border-box;}
.left text{
  display: block;
  color: #999999;
  line-height: 45px;
  border-right: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  box-sizing: border-box;
}
.active{background: #f0f0f2 !important;color: #333333 !important;}
.box{margin-bottom: 5%;}
.box>text{display: block;text-align: left;color: #333333;line-height: 40px;}
.box>view{background: white;text-align: left;}
.box>view view{
  display: inline-block;
  width: 33.3%;
  vertical-align: top;
  padding: 3%;
  padding-bottom: 0;
  box-sizing: border-box;
  text-align: center;
}
.box>view view image{
  display: inline-block;
  width: 60px;
  height: 60px;
}
.box>view view text{display: inline-block;color: #333333;height: 40px;overflow: hidden;text-align: center;width: 100%;padding-top: 1%;box-sizing: border-box;}

@media only screen and (min-width: 360px) and (max-width: 420px) {
  .box>view view image{width: 65px;height: 65px;}
}

@media only screen and (min-width: 100px) and (max-width: 355px) {
  .box>view view image{width: 50px;height: 50px;}
  .box > wx-view wx-view wx-text { height: 40px; }
}