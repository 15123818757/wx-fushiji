/**index.wxss**/
.banner{margin-top: -5px;}

.content{margin-top: 3%;margin-bottom: 3%;}
.content>view{
  width: 33.33%;
  float: left;
  text-align: center;
  padding: 5%;
  background: white;
  box-sizing: border-box;
  border-right: 1px solid #d9d9d9;
  border-bottom: 1px solid #d9d9d9;
  position: relative;
}
.content>view:nth-of-type(3n){border-right: none;}
.content>view image{
  display: inline-block;
  width: 32px;
  height: 32px;
}
.content>view text{
  color: black;
  line-height: 1rem;
  display: block;
  text-align: center;
}
.contact{
  display: block;
  width: 100%;
  height: 100%;
  opacity: 0;
  position: absolute;
  top: 40%;
  left: 0;
}
.content>view text:nth-of-type(2){color: #999999;font-size: 0.65rem;}
.banner{height: 209px;}
@media only screen and (min-width: 100px) and (max-width: 340px) {
	.top{height: 60px;}
  .banner{height: 180px;}
  .banner image{height: 180px;}
  .loginAfter image{height: 42px;}
  .content>view text:nth-of-type(2){font-size: 0.6rem;}
}