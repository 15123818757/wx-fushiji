/* pages/myOrder/myOrder.wxss */
.nav{position: relative;border-bottom: 1px solid #cccccc;background: white;}
.nav view{
  display: inline-block;
  width: 20%;
  line-height: 50px;
  color: black;
  font-size: 0.9rem;
  text-align: center;
  font-family: "微软雅黑";
}
.nav view:last-child{
  height: 3px;
  position: absolute;
  bottom: 0;
  left: 0;
  transition: 0.5s;
}
.nav view:last-child text{
  display: block;
  width: 80%;
  margin: auto;
  height: 3px;
  background: #000740;
}
.goodsInfo{
  padding: 15px;
  box-sizing: border-box;
  background: white;
  padding-bottom: 0;
}
.goodsInfo>view image{
  display: inline-block;
  width: 70px;
  height: 93.1px;
  margin: 0 3%;
}
.goodsInfo>view:nth-of-type(1){
  width: 100%;
  display: inline-block;
  border-bottom: 1px solid #d9d9d9;
  position: relative;
  padding-bottom: 3%;
}
.goodsInfo>view:nth-of-type(2){
  height: 40px;
}
.goodsInfo>view:nth-of-type(2) text{
  padding: 0 5px;
  font-size: 0.8rem;
  color: #666666;
  line-height: 40px;
}
.goodsInfo>view:nth-of-type(2) text text{
  font-size: 0.9rem;
}
.goodsInfo>view:nth-of-type(2) text:nth-of-type(2){
  display: inline-block;
  border-radius: 5px;
  float: right;
  color: white;
  background: #f14226;
  line-height:15px;
  padding:6px 12px;
  margin-top:7px;
}
.num{
  position: absolute;
  bottom: 10px;
  right: 15px;
}
.info{
  width: 68%;
  display: inline-block;
  text-align: left;
  vertical-align: top;
}
.info text{
  text-align: left;
  display: block;
  color: black;
  width: 100%;
  font-size: 0.9rem;
  line-height: 100px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.peisong{
  background: white;
  padding:15px;
  margin: 3% 0;
  border-top:1px solid #d9d9d9;
  border-bottom:1px solid #d9d9d9; 
  padding-bottom: 10px;
}
.peisong text{
  color: #666666;
  font-size: 0.8rem;
  padding: 0 5px;
}
.peisong text:nth-of-type(2){color: #aeaeae;float: right;}
.price{
  background: white;
  padding: 5% 0;
  box-sizing: border-box;
}
#orderId{border: none;margin: 0;position: relative;}
#orderId view{width: 90%;height: 1px;background: #dddddd;position: absolute;bottom: 0;left: 5%; }
#orderId text:nth-of-type(2){color: #ff0303;}
.content>view{margin: 3% 0;}
.content{text-align: center;}
.content>text{
  display: inline-block;
  text-align: center;
  color: black;
  padding: 2% 4%;
  border-radius: 3px;
  border: 1px solid lightgray;
  background: white;
  margin-bottom: 3%;
}